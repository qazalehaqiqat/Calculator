<?xml version="1.0" encoding="utf-8"?>

<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ghazaleh.calculator.MainActivity">
        
        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/EditText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/infoTextView"
            android:enabled="false"
            android:gravity="bottom"
            android:textSize="20sp"
            android:maxLines="2"
            android:lines="2">
        </EditText>

        <Button
            android:id="@+id/button_7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="7"
            android:textSize="20sp"
            android:layout_below="@id/EditText">
        </Button>
        <Button
            android:id="@+id/button_8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="8"
            android:textSize="20sp"
            android:layout_below="@id/EditText"
            android:layout_toRightOf="@id/button_7">
        </Button>
        <Button
            android:id="@+id/button_9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="9"
            android:textSize="20sp"
            android:layout_below="@id/EditText"
            android:layout_toRightOf="@id/button_8">
        </Button>
        <Button
            android:id="@+id/button_4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="4"
            android:textSize="20sp"
            android:layout_below="@id/button_7">
        </Button>
        <Button
            android:id="@+id/button_5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="5"
            android:textSize="20sp"
            android:layout_below="@id/button_8"
            android:layout_toRightOf="@id/button_4">
        </Button>
        <Button
            android:id="@+id/button_6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="6"
            android:textSize="20sp"
            android:layout_below="@id/button_9"
            android:layout_toRightOf="@id/button_5">
        </Button>
        <Button
            android:id="@+id/button_1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:layout_below="@id/button_4">
        </Button>
        <Button
            android:id="@+id/button_2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="2"
            android:textSize="20sp"
            android:layout_below="@id/button_5"
            android:layout_toRightOf="@id/button_1">
        </Button>
        <Button
            android:id="@+id/button_3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="3"
            android:textSize="20sp"
            android:layout_below="@id/button_6"
            android:layout_toRightOf="@id/button_2">
        </Button>
        <Button
            android:id="@+id/button_Dot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="."
            android:textSize="20sp"
            android:layout_below="@id/button_1">
        </Button>
        <Button
            android:id="@+id/button_0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_below="@id/button_2"
            android:layout_toRightOf="@id/button_Dot">
        </Button>
        <Button
            android:id="@+id/button_equal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="="
            android:textSize="20sp"
            android:layout_below="@id/button_3"
            android:layout_toRightOf="@id/button_0">
        </Button>
        <Button
            android:id="@+id/button_divide"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="/"
            android:textSize="20sp"
            android:layout_below="@id/EditText"
            android:layout_toRightOf="@id/button_9">
        </Button>
        <Button
            android:id="@+id/button_multiply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="*"
            android:textSize="20sp"
            android:layout_below="@id/button_divide"
            android:layout_toRightOf="@id/button_6">
        </Button>
        <Button
            android:id="@+id/button_subtract"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:layout_below="@id/button_multiply"
            android:layout_toRightOf="@id/button_3">
        </Button>
        <Button
            android:id="@+id/button_addition"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+"
            android:textSize="20sp"
            android:layout_below="@id/button_subtract"
            android:layout_toRightOf="@id/button_equal">
        </Button>

        <Button
            android:id="@+id/button_clear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="C"
            android:textSize="40sp"
            android:layout_below="@id/button_addition"
            android:layout_alignRight="@id/button_addition">
        </Button>

        
     </RelativeLayout>
</layout>

